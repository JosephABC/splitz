<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeBig"
        android:textColor="@color/dark_gray"
        android:paddingLeft="@dimen/textMarginLeft"
        android:layout_marginTop="@dimen/BigRowMarginTop">
    </TextView>


    <TextView
        android:id="@+id/emailTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTV"
        android:textSize="@dimen/subtitleSize"
        android:paddingLeft="@dimen/textMarginLeft"
        android:layout_marginBottom="@dimen/BigRowMarginTop"/>

    <TextView
        android:id="@+id/amountTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/amountSize"
        android:textColor="@color/colorAccent"
        android:paddingRight="@dimen/AmountMarginRightNoArrow"
        android:gravity="right"
        android:layout_marginTop="@dimen/BigAmountMarginTop">
    </TextView>

</RelativeLayout>
